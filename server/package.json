{
  "name": "fickle-bean-reader",
  "version": "0.0.0",
  "scripts": {
    "build": "npx tsc",
    "start": "DOTENV_CONFIG_PATH=./env/production.env ts-node -r dotenv/config ./dist/server",
    "dev": "DOTENV_CONFIG_PATH=./env/development.env ts-node -r dotenv/config ./dist/server",
    "test": "DOTENV_CONFIG_PATH=./env/test.env npx jest --setupFiles=dotenv/config"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "ignore": [
      "src/public"
    ],
    "exec": "./node_modules/.bin/ts-node --files -r tsconfig-paths/register ./src"
  },
  "_moduleAliases": {
    "@src": "dist"
  },
  "engines": {
    "node": ">=8.10.0"
  },
  "dependencies": {
    "dotenv": "^16.4.4",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "module-alias": "^2.2.3",
    "mongoose": "^8.1.2",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "typescript": "^5.3.3"
  }
}
